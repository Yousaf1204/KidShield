<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"
    android:paddingVertical="12dp">

    <TextView
        android:id="@+id/textView_sms_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Name (Inbox)"
        android:textColor="@color/kidshield_text_primary"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView_sms_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="This is the body of the message."
        android:textColor="@color/kidshield_text_secondary"
        android:textSize="14sp"/>
</LinearLayout>